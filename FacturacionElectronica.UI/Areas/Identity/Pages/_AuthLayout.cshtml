@{
    Layout = "/Views/Shared/_Layout.cshtml";

}

<link rel="stylesheet" href="~/css/site.css" />
<div>
    <img src="~/Imagenes/Electro.png" width="570" height="370" style="position:fixed;left: 200px; top: 150px">


</div>
<div class="row" style="justify-content:center; ">

    <div class="col-md-6 offset-md-3" style="position: relative; left: 200px; top: 90px">
        <div class="card">

            <div class="card-body" style="background: #BFEFF7;">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("Scripts", required: false)
}

<script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        })
    })
</script>