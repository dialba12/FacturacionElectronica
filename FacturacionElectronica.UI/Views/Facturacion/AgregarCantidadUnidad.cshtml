@model FacturacionElectronica.Modelos.AgregarValoresLinea

@{
    ViewData["Title"] = "AgregarCantidadUnidad";
}

<center>
    <h1 class="heading" style="        text-align: center;
        margin: -19px 0 0;
        margin-top: 20px;
        color: #B8240A;

        font-family: Montserrat;
        font-style: normal;
        font-size: 64px;
        line-height: 78px;
    ">
        Agregar valores de la línea
    </h1>
</center>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarCantidadUnidad">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="idInventario" class="rounded border border-danger" type="hidden" />

            </div>
            <div class="form-group">

                <input asp-for="idFactura" class="rounded border border-danger" type="hidden" />

            </div>

            <div class="form-group">
                <label asp-for="cantidad" class="control-label" style=" font-family: Montserrat;
        font-style: normal;
        font-size: 20px;
        color: #B8240A;">Cantidad: </label>
                <input type="number" min="1" max="@ViewBag.cantidadMaxima" asp-for="cantidad" class="rounded border border-danger" value=" " />
                <span asp-validation-for="cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="unidadMedida" class="control-label" style=" font-family: Montserrat;
        font-style: normal;
        font-size: 20px;
        color: #B8240A;">Unidad de medida: </label>
                <select id="unidadMedida" name="unidadMedida">
                    <option value="01">Gramos</option>
                    <option value="02">Centimetros</option>
                    <option value="03">Pulgadas</option>
                    <option value="04">Pies</option>
                    <option value="05">Unidad</option>
                    <option value="06">Decenas</option>
                </select>
                <span asp-validation-for="unidadMedida" class="text-danger"></span>
            </div>
            <center>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" style="font-family: Montserrat;
        font-style: normal;
        font-weight: 400;
        font-size: 15px;
        color: #D6F5FA;
        line-height: 44px;
        background: #B8240A;
        border: 2px solid #000000;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin: 10px;" />
                </div>
            </center>
        </form>
    </div>
</div>



