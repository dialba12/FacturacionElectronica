@model IEnumerable<FacturacionElectronica.Modelos.Factura>

@{
    ViewData["Title"] = "ListarFacturas";
}

    <h1 class="heading" style="        text-align: center;
        margin: -19px 0 0;
        margin-top: 20px;
        color: #B8240A;

        font-family: Montserrat;
        font-style: normal;
        font-size: 64px;
        line-height: 78px;
    ">
        Módulo de Factura
    </h1>

    <center>
        <div>
            <p style="left: auto;">
                <a asp-action="Agregar" class="btn btn-primary btn-xs" style="font-family: Montserrat;
        font-style: normal;
        font-weight: 450;
        font-size: 25px;
        color: #D6F5FA;
        line-height: 44px;
        background: #B8240A;
        border: 2px solid #000000;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin: 10px;
    ">Agregar</a>&nbsp;&nbsp;&nbsp;&nbsp;
                <input class="rounded border border-danger" id="name" name="name" required size="40">&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="Consultar" class="btn btn-primary btn-xs"
                   style="font-family: Montserrat;
        font-style: normal;
        font-weight: 450;
        font-size: 25px;
        color: #D6F5FA;
        line-height: 44px;
        background: #B8240A;
        border: 2px solid #000000;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin: 10px;">Consultar</a>
            </p>
        </div>
    </center>

<table class="table">
    <thead>
        <tr style="        background-color: paleturquoise;
        color: #B8240A;
        ">
            <th>
                @Html.DisplayName("ID Receptor")
            </th>
            <th>
                @Html.DisplayName("Fecha de emisión")
            </th>
            <th>
                @Html.DisplayName("Número consecutivo")
            </th>

            <th>
                @Html.DisplayName("Acciones")
            </th>

        </trstyle=">
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEmision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroConsecutivo)
            </td>
           
            <td>
               
                @Html.ActionLink("Eliminar", "EliminarFactura", new { id=item.idFactura })
            </td>
        </tr>
}
    </tbody>
</table>
