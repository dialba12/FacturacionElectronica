            @Html.DisplayFor(model => model.OtrasSenas)
        </dd>
    </dl>
</div>
<div style="text-align:center; align-content:center; align-items:center;">
    @Html.ActionLink("Modificar", "Modificar", new { id = Model.idCliente }, new { @class = "btn btn-success" })
    @Html.ActionLink("Eliminar", "Eliminar", new { id = Model.idCliente }, new { @class = "btn btn-danger" })
    @Html.ActionLink("Regresar", "Listar", new { id = Model.idCliente }, new { @class = "btn btn-success" })

</div>
