
@model IEnumerable<FacturacionElectronica.Modelos.Cliente>
    <head>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/ModuloClientes.css" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>

            @{
                ViewData["Title"] = "Lista de clientes";
            }
        </title>


    </head>
    <h1 class="heading" style="        text-align: center;
        margin: -19px 0 0;
        margin-top: 20px;
        color: #B8240A;
        
        font-family: Montserrat;
        font-style: normal;
        font-size: 64px;
        line-height: 78px;
    " >
        Módulo de Clientes
    </h1>

    <br />

    <center>
        <div>
            <p style="left: auto;">
                <a asp-action="Agregar" class="btn btn-primary btn-xs" style="font-family: Montserrat;
        font-style: normal;
        font-weight: 450;
        font-size: 25px;
        color: #D6F5FA;
        line-height: 44px;
        background: #B8240A;
        border: 2px solid #000000;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin: 10px;
    ">Agregar</a>&nbsp;&nbsp;&nbsp;&nbsp;
                <input class="rounded border border-danger" id="name" name="name" required size="40">&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="Consultar" class="btn btn-primary btn-xs"
                   style="font-family: Montserrat;
        font-style: normal;
        font-weight: 450;
        font-size: 25px;
        color: #D6F5FA;
        line-height: 44px;
        background: #B8240A;
        border: 2px solid #000000;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin: 10px;">Consultar</a>
            </p>
        </div>
    </center>

    

    <table class="table">
        <thead>
            <tr style="        background-color: paleturquoise;
        color: #B8240A;
        ">

                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimerApellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SegundoApellido)
                </th>
                <th>
                    @Html.DisplayName("Acciones")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimerApellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SegundoApellido)
                    </td>
                    <td>
                        @Html.ActionLink("Modificar", "Modificar", new { id = item.idCliente }) |
                        @Html.ActionLink("Eliminar", "Eliminar", new { id = item.idCliente })
                    </td>
                </tr>
            }
        </tbody>
    </table>
