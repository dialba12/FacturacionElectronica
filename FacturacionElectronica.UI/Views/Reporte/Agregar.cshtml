@model FacturacionElectronica.Modelos.Cierre

@{
    ViewData["Title"] = "Agregar";
}

<h1 class="heading" style="        text-align: center;
        margin: -19px 0 0;
        margin-top: 20px;
        color: #B8240A;

        font-family: Montserrat;
        font-style: normal;
        font-size: 64px;
        line-height: 78px;
    ">
    Añadir inventario
</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Agregar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label" style="        font-family: Montserrat;
        font-style: normal;
        font-size: 36px;
        color: #B8240A;
"></label>
                <input asp-for="Monto" class="rounded border border-danger" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <center>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" style="font-family: Montserrat;
        font-style: normal;
        font-weight: 450;
        font-size: 25px;
        color: #D6F5FA;
        line-height: 44px;
        background: #B8240A;
        border: 2px solid #000000;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin: 10px;" />
                </div>
            </center>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
