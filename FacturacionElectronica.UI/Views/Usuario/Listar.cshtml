@model IEnumerable<FacturacionElectronica.UI.Areas.Identity.Data.Usuario>

@{
    ViewData["Title"] = "Lista de usuarios";
}

    <h1 class="heading" style="        text-align: center;
        margin: -19px 0 0;
        margin-top: 20px;
        color: #B8240A;

        font-family: Montserrat;
        font-style: normal;
        font-size: 64px;
        line-height: 78px;
    ">
        Módulo de Usuarios
    </h1>

    <center>
        <div>
            <p style="left: auto;">
                <a  class="btn btn-primary btn-xs" href='/Identity/Account/Register' style="font-family: Montserrat;
        font-style: normal;
        font-weight: 450;
        font-size: 25px;
        color: #D6F5FA;
        line-height: 44px;
        background: #B8240A;
        border: 2px solid #000000;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin: 10px;
    ">Añadir</a>&nbsp;&nbsp;&nbsp;&nbsp;
                <input class="rounded border border-danger" id="name" name="name" required size="40">&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="Consultar" class="btn btn-primary btn-xs"
                   style="font-family: Montserrat;
        font-style: normal;
        font-weight: 450;
        font-size: 25px;
        color: #D6F5FA;
        line-height: 44px;
        background: #B8240A;
        border: 2px solid #000000;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin: 10px;">Consultar</a>
            </p>
        </div>
    </center>


<table class="table">
    <thead>
        <tr style="        background-color: paleturquoise;
        color: #B8240A;
        " >
            <th>
                @Html.DisplayName("Nombre")
            </th>
            <th>
                @Html.DisplayName("Primer Apellido")
            </th>
            <th>
                @Html.DisplayName("Segundo Apellido")
            </th>
            <th>
                @Html.DisplayName("Usuario")
            </th>
            <th>
                @Html.DisplayName("Acciones")
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimerApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SegundoApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                @Html.ActionLink("Modificar", "Modificar", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>


